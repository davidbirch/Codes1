<h1>Divisions</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Code</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @divisions.each do |division| %>
      <tr>
        <td><%= division.id %></td>
        <td><%= link_to division.code, division_path(division) %></td>
        <td><%= division.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_division_path(division), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', division_path(division), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_division_path, :class => 'btn btn-primary' %>
