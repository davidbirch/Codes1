<%= form_for @primary_activity, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Primary Activity</legend>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :industry_class_code, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :industry_class_code, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :industry_class_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :industry_class_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', primary_activities_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
